<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/shoppingListGroup" android:layout_weight="1">
        <ExpandableListView
            android:id="@+id/shoppingListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ExpandableListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/shoppingListBottomButtonGroup">

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_button" android:layout_weight="1"
            android:background="@android:color/transparent" 
            android:onClick="addFoodToShoppingListClicked"/>

        <ImageButton
            android:id="@+id/imagePurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purchase_button" android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="purchaseButtonClicked"/>

        <ImageButton
            android:id="@+id/imagePurchase_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purchase_all_button" android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="purchaseAllButtonClicked"/>

    </LinearLayout>

</LinearLayout>
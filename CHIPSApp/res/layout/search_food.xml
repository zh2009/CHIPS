<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1" >
	    <EditText
	        android:id="@+id/searchFoodEditText"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@+id/doSearchFoodButton"
	        android:cursorVisible="true"
	        android:inputType="text"
	        android:maxLines="1"
	        android:minLines="1" android:layout_width="200dp">
	        <requestFocus />
	    </EditText>
	    
	    <Button
	        android:id="@+id/doSearchFoodButton"
	        android:layout_width="100px"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:onClick="doSearchFoodButtonClicked"
	        android:text="@string/doSearchFoodButton" />
	        
	    <ListView
	        android:id="@+id/searchResultView"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	         android:layout_below="@+id/searchFoodEditText">
        </ListView>
    </RelativeLayout>
